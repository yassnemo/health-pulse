# HealthPulse Analytics Backend Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/dbname
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_HOST=hostname
DATABASE_PORT=5432
DATABASE_NAME=dbname
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Authentication and Security
SECRET_KEY=ChangeMeToASecureRandomString
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=https://yourdomain.com

# Microservice URLs
DATA_PROCESSING_URL=http://data-processing-service:8001
DATA_STORAGE_URL=http://data-storage-service:8002
ML_SERVICE_URL=http://ml-service:5000

# Monitoring and Telemetry
ENABLE_PROMETHEUS=true
ENABLE_LOGGING=true

# SMTP Settings for Email Notifications
SMTP_SERVER=smtp.provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM_NAME=Your Application Name
EMAIL_FROM_ADDRESS=notifications@yourdomain.com

# Caching
REDIS_URL=redis://redis-host:6379/0
